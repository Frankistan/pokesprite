{
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "brace-style": [2, "stroustrup", {
      "allowSingleLine": false
    }],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "babel/block-scoped-var": 1,
    "block-scoped-var": 0,
    "camelcase": [2, {
      "properties": "never"
    }],
    "dot-notation": [2, {
      "allowPattern": "^[a-z]+(_[a-z]+)+$"}
    ],
    "no-console": 0,
    "eqeqeq": [2, "smart"]
  },
  "plugins": [
    "babel"
  ],
  "globals": {
    "__ARGS__": true
  }
}
